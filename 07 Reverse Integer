// Reverse Integer
//  Link :https://leetcode.com/problems/reverse-integer/description/

class Solution {
    public int reverse(int x) {
        long reverse=0;
        while(x!=0){
            int lastdigit=x%10;
            reverse=reverse*10+lastdigit;
            x=x/10;
            if(reverse>Integer.MAX_VALUE || reverse< Integer.MIN_VALUE){ //Edge cases//
                return 0;
            }
        }
        return (int)reverse;
    }
}